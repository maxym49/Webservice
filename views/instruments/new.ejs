<% include ../partials/header %>
<div class="fixfooter">
    <div class="container">
        <div class="row">
            <h1 style="text-align: center;">Create a new post!</h1>
            <div style="width: 30%; margin: 20px auto">
                <form action = "/instruments" method = "POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="name" placeholder="name" required>
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="img"  placeholder="img-url" required>
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="number" name="price"  placeholder="price" min="0.01" step="0.01" required>
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="description"  placeholder="description" required>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                     </div>
                </form>
                <a href="/instruments">Go back!</a>
            </div>
        </div>
    </div>
</div>
<% include ../partials/footer %>